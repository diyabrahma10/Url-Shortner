<%- include("navbar") %>

<section class="max-w-6xl mx-auto px-4 py-8 mt-36">

  <!-- Page Header -->
  <h1 class="text-2xl font-bold text-gray-900">
  Welcome,
  <% if (user) { %>
    <span class="text-blue-600"><%= user.name %></span>
  <% } else { %>
    <span>User</span>
  <% } %>
</h1>

  <!-- Success / Error Messages -->
  <% if (errors && errors.length > 0) { %>
      <ul
        class="mb-4 rounded-md border border-red-300 bg-red-100 px-4 py-3 text-red-700"
      >
        <% errors.forEach(err => { %>
        <li class="list-disc ml-5 text-sm"><%= err %></li>
        <% }) %>
      </ul>


      <% } %> <% if (success && success.length > 0) { %>
      <ul
        class="mb-4 rounded-md border border-green-300 bg-green-100 px-4 py-3 text-green-700"
      >
        <% success.forEach(msg => { %>
        <li class="list-disc ml-5 text-sm"><%= msg %></li>
        <% }) %>
      </ul>
      <% } %>

  <!-- URL Shortener Form -->
  <form
    action="/urls"
    method="POST"
    class="bg-white p-6 rounded-lg shadow mb-10 space-y-4"
  >

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">
        Long URL
      </label>
      <input
        type="url"
        name="originalUrl"
        placeholder="https://example.com/very/long/url"
        required
        class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">
        Custom Short Code (optional)
      </label>
      <input
        type="text"
        name="shortCode"
        placeholder="my-link"
        class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
      <p class="text-xs text-gray-500 mt-1">
        Leave empty to auto-generate a short code
      </p>
    </div>

    <div class="flex justify-end">
      <button
        type="submit"
        class="rounded-lg bg-blue-600 px-6 py-2 text-white font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
      >
        Shorten URL
      </button>
    </div>

  </form>

  <!-- URL List -->
  <% if (!urls || urls.length === 0) { %>

    <div class="bg-white p-6 rounded-lg shadow text-gray-600">
      You havenâ€™t created any short URLs yet.
    </div>

  <% } else { %>

    <div class="grid gap-4">

      <% urls.forEach(url => { %>
        <div class="bg-white p-4 rounded-lg shadow flex flex-col md:flex-row md:items-center md:justify-between gap-4">

          <!-- Original URL -->
          <div class="flex-1">
            <p class="text-sm text-gray-500">Original URL</p>
            <p class="text-gray-900 break-all">
              <%= url.originalUrl %>
            </p>
          </div>

          <!-- Short URL -->
          <div class="flex-1">
            <p class="text-sm text-gray-500">Short URL</p>
            <a
              href="/<%= url.shortCode %>"
              target="_blank"
              class="text-blue-600 hover:underline break-all"
            >
              <%= url.shortCode %>
            </a>
          </div>

          <!-- Click Count -->
          <div class="text-sm text-gray-600 whitespace-nowrap">
            <span class="font-medium"><%= url.clicks %></span> clicks
          </div>

        </div>
      <% }) %>

    </div>

  <% } %>

</section>

<%- include("footer") %>
